{
  "name": "users",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "DEBUG=koa*,srv* NODE_ENV=development node ./bin/server.js | pino",
    "benchmark": "NODE_ENV=development node ./benchmark/index.js | pino",
    "start": "node ./bin/server.js",
    "lint": "standard src/**/*.js test/**/*.js --verbose | snazzy",
    "eslint": "eslint -c .eslintrc src tests",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "cover": "NODE_ENV=test nyc npm run test",
    "test": "NODE_ENV=test ava --tap | tap-spec",
    "watch:test": "NODE_ENV=test ava --watch --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.16.0",
    "babel-core": "^6.24.0",
    "babel-generator": "^6.24.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "boom": "^4.3.1",
    "debug": "^2.6.3",
    "joi": "^10.4.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-pino-logger": "^2.1.0",
    "koa-router": "^7.1.1",
    "mongodb": "^2.2.25",
    "monk": "^4.0.0",
    "spdy": "^3.4.4"
  },
  "devDependencies": {
    "@ava/babel-preset-stage-4": "^1.0.0",
    "@ava/babel-preset-transform-test-files": "^3.0.0",
    "ava": "^0.19.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-remove-strict-mode": "0.0.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "benchmark": "^2.1.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.42.0",
    "nyc": "^10.2.0",
    "piping": "^1.0.0-rc.4",
    "pre-commit": "^1.2.2",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2",
    "supertest": "^3.0.0",
    "tap-diff": "^0.1.1",
    "tap-nyan": "^1.1.0",
    "tap-spec": "^4.1.1"
  },
  "pre-commit": [
    "flow",
    "lint",
    "cover"
  ],
  "engines": {
    "node": ">= 7.7.0",
    "npm": ">= 4"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "lint-staged": {
    "*.js": "standard",
    "bin/*": "standard"
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "!test/coverage/**/*"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [],
    "extension": [
      ".js"
    ],
    "lines": 75,
    "functions": 75,
    "statements": 75,
    "check-coverage": true,
    "report-dir": "./test/coverage",
    "require": [
      "babel-core"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "json",
      "html",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
